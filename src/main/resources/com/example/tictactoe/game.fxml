<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10" prefWidth="400" prefHeight="400"
      fx:controller="com.example.tictactoe.Game">
    <!-- Game Title -->
    <Label text="Tic Tac Toe" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <!-- Game Board -->
    <GridPane fx:id="gameBoard" alignment="CENTER" hgap="5" vgap="5">
        <!-- Buttons for 3x3 Grid -->
        <Button fx:id="button0" prefWidth="100" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Button fx:id="button1" prefWidth="100" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Button fx:id="button2" prefWidth="100" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="2" />

        <Button fx:id="button3" prefWidth="100" prefHeight="100" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Button fx:id="button4" prefWidth="100" prefHeight="100" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Button fx:id="button5" prefWidth="100" prefHeight="100" GridPane.rowIndex="1" GridPane.columnIndex="2" />

        <Button fx:id="button6" prefWidth="100" prefHeight="100" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Button fx:id="button7" prefWidth="100" prefHeight="100" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        <Button fx:id="button8" prefWidth="100" prefHeight="100" GridPane.rowIndex="2" GridPane.columnIndex="2" />
    </GridPane>

    <!-- Game Status -->
    <Label fx:id="statusLabel" text="Player X's Turn" style="-fx-font-size: 16;" />
</VBox>
