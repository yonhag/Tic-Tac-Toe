<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tictactoe.GameController"
      alignment="CENTER" spacing="10" prefWidth="600" prefHeight="600">
    <!-- Game Title -->
    <Label text="Tic Tac Toe" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <!-- Game Board -->
    <GridPane fx:id="gameBoard" alignment="CENTER" hgap="5" vgap="5" />

    <!-- Game Status -->
    <Label fx:id="statusLabel" style="-fx-font-size: 16;" />
</VBox>
