<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TabPane layoutX="10" layoutY="10" prefHeight="300" prefWidth="400">
            <tabs>
                <!-- Login Tab -->
                <Tab text="Login">
                    <content>
                        <VBox alignment="CENTER" spacing="10" prefHeight="250" prefWidth="380" style="-fx-padding: 20;">
                            <children>
                                <Label text="Username:"/>
                                <TextField fx:id="loginUsername" promptText="Enter your username"/>
                                <Label text="Password:"/>
                                <PasswordField fx:id="loginPassword" promptText="Enter your password"/>
                                <Button text="Login" fx:id="loginButton"/>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <!-- Signup Tab -->
                <Tab text="Signup">
                    <content>
                        <VBox alignment="CENTER" spacing="10" prefHeight="250" prefWidth="380" style="-fx-padding: 20;">
                            <children>
                                <Label text="Full Name:"/>
                                <TextField fx:id="signupFullName" promptText="Enter your full name"/>
                                <Label text="Email:"/>
                                <TextField fx:id="signupEmail" promptText="Enter your email"/>
                                <Label text="Username:"/>
                                <TextField fx:id="signupUsername" promptText="Choose a username"/>
                                <Label text="Password:"/>
                                <PasswordField fx:id="signupPassword" promptText="Choose a password"/>
                                <Button text="Signup" fx:id="signupButton"/>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
